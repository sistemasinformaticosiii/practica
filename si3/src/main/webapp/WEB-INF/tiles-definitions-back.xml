<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	<!--  Plantilla Principal -->
    <definition name="defaultTemplate" template="/WEB-INF/templates/template.jsp">
        <put-attribute name="header" value="/WEB-INF/templates/header.jsp" />
        <put-attribute name="left" value="/WEB-INF/templates/left.jsp" />
        <put-attribute name="menu" value="/WEB-INF/templates/menu.jsp" />
        <put-attribute name="center" value="/WEB-INF/templates/center.jsp" />
        <put-attribute name="footer" value="/WEB-INF/templates/footer.jsp" />
		<put-attribute name="body" value="/WEB-INF/templates/blank.jsp" />
    </definition>
    
    <definition name="index" extends="defaultTemplate">
    	<put-attribute name="body" value="/WEB-INF/templates/index.jsp"/>
    </definition> 
    
    <definition name="info/about" extends="defaultTemplate">
    	<put-attribute name="body" value="/WEB-INF/templates/about.jsp"/>
    </definition>
</tiles-definitions>


 

                
            